{
  "name": "Python + ESP-IDF Dev Container",
  "image": "espidf/idf:release-v5.4", 
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "espressif.esp-idf-extension"
      ]
    }
  },
  "postCreateCommand": "pip install -r requirements.txt && idf.py --version",
  "remoteUser": "vscode"
}

